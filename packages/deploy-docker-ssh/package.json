  "bugs": {
    "url": "https://github.com/iacobfred/deploy-docker-ssh/issues"
  },
  "homepage": "https://github.com/iacobfred/deploy-docker-ssh#readme",
  "dependencies": {
    "@actions/core": "*",
    "@actions/exec": "*",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@jest/types": "*",
    "@types/node": "*",
    "@typescript-eslint/parser": "*",
    "@vercel/ncc": "*",
    "eslint": "*",
    "eslint-plugin-github": "*",
    "eslint-plugin-jest": "*",
    "jest": "*",
    "prettier": "*",
    "prettier-plugin-organize-imports": "*",
